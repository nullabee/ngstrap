{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "strictNullChecks": true,
    "removeComments": false,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [ "es5", "es6", "dom" ],
    "types": [ "node" ],
    "outDir": "gen/js"
  },
  "exclude": [
    "ngApp/main.aot.ts",
    "TypingsDef",
    "node_modules",
    "gen/ngfactory",
    "**/*.spec.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
